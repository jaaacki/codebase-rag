# Pinecone API credentials
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=your_pinecone_index_name_here

# Groq API key for LLama models
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# Embedding configuration
EMBEDDING_MODEL=text-embedding-3-large  # Options: text-embedding-3-large, all-mpnet-base-v2
EMBEDDING_DIMENSION=3072  # 3072 for text-embedding-3-large, 768 for all-mpnet-base-v2
EMBEDDING_PROVIDER=openai  # Options: openai, huggingface

# Optional: Hugging Face API Token (if needed)
# HUGGINGFACE_API_TOKEN=your_huggingface_token_here
